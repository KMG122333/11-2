#include <stdio.h>
#define CODE 3

int main() {
    #if(CODE == 1)
    double num1 =0.0, num2 = 0.0, result = 0.0;
    printf("실수 두개를 입력하세요>>");
    scanf("%lf %lf\n", &num1, &num2);
    result = num1/num2;
    printf("나눗셈 결과: %lf\n", result);
    #else
    double num1 =0.0, num2 = 0.0, result = 0.0;
    printf("정수 두개를 입력하세요>>");
    scanf("%d %d\n", &num1, &num2);
    result = num1+num2;
    printf("덧셈 결과: %lf\n", result);
#endif
    return 0;
}
